{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "lib": ["ES2015", "ES2017", "DOM"],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      "@/*": ["./*"],
      "@components/*": ["./components/*"],
      "@graphql/*": ["./graphql/*"],
      "@drizzle/*": ["./drizzle/*"],
      "@worker/*": ["./worker/*"]
    },
    "types": ["./worker-configuration.d.ts"],
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "worker-configuration.d.ts"
  ],
  "exclude": ["node_modules", "worker/node_modules", "client/node_modules"]
}
