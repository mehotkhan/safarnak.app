{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "lib": [
      "ES2015",
      "ES2017",
      "DOM"
    ],
    "jsx": "react-jsx",
    "moduleResolution": "Bundler",
    "baseUrl": ".",
    "paths": {
      
      "@/*": [
        "./*"
      ],
      "@components/*": [
        "./components/*"
      ],
      "@graphql/*": [
        "./graphql/*"
      ],
      "@database/*": [
        "./database/*"
      ],
      "@worker/*": [
        "./worker/*"
      ],
      "@api": [
        "./api"
      ],
      "@api/*": [
        "./api/*"
      ],
      "@store": [
        "./store"
      ],
      "@store/*": [
        "./store/*"
      ],
      "@hooks": [
        "./hooks"
      ],
      "@hooks/*": [
        "./hooks/*"
      ],
      "@constants": [
        "./constants"
      ],
      "@constants/*": [
        "./constants/*"
      ],
      "@locales": [
        "./locales"
      ],
      "@locales/*": [
        "./locales/*"
      ]
      ,
      "@assets": [
        "./assets"
      ],
      "@assets/*": [
        "./assets/*"
      ]
    },
    "types": [
      "./worker-configuration.d.ts"
    ],
    "resolveJsonModule": true,
    "noEmit": true,
    "skipLibCheck": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedIndexedAccess": false,
    "exactOptionalPropertyTypes": false,
    "noImplicitOverride": true,
    "allowUnusedLabels": false,
    "allowUnreachableCode": false
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    ".expo/types/**/*.ts",
    "expo-env.d.ts",
    "worker-configuration.d.ts",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "node_modules",
    "worker/node_modules",
    "client/node_modules",
    "Template",
    "Template/**"
  ]
}