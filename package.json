{
  "name": "safarnak-app",
  "version": "0.6.2",
  "main": "expo-router/entry",
  "scripts": {
    "dev": "concurrently -k -n worker,expo -c yellow,cyan \"yarn worker:dev\" \"yarn start\"",
    "start": "expo start",
    "android": "expo run:android",
    "android:newarch": "NEW_ARCH=1 expo run:android",
    "ios": "expo run:ios",
    "web": "expo start --web",
    "build:debug": "eas build --profile debug --platform android",
    "build:release": "eas build --profile release --platform android",
    "build:local": "cd android && ./gradlew clean assembleRelease --no-daemon --max-workers=2 --build-cache --parallel --stacktrace --info",
    "worker:dev": "wrangler dev --config wrangler.toml --ip 0.0.0.0",
    "worker:deploy": "wrangler deploy --config wrangler.toml",
    "db:generate": "drizzle-kit generate --config drizzle.config.ts",
    "db:migrate": "wrangler d1 migrations apply my-d1-db --local --config wrangler.toml",
    "db:studio": "drizzle-kit studio --config drizzle.config.ts --port 4983",
    "lint": "eslint . --ext .js,.ts,.tsx",
    "lint:fix": "eslint . --ext .js,.ts,.tsx --fix",
    "format": "prettier --write .",
    "codegen": "graphql-codegen --config codegen.yml",
    "codegen:watch": "graphql-codegen --config codegen.yml --watch",
    "clean": "rm -rf .wrangler db.db* node_modules/.cache android/.gradle android/build android/app/build .expo && echo 'Cleared databases, cache, and build artifacts'",
    "commit": "git-cz",
    "commit:check": "commitlint --edit",
    "version:patch": "release-it patch --ci",
    "version:minor": "release-it minor --ci",
    "version:major": "release-it major --ci",
    "version:prerelease": "release-it prerelease --ci",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s -r 0",
    "changelog:all": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "version:info": "node scripts/version-manager.js info",
    "version:create": "node scripts/version-manager.js",
    "commit:generate": "node scripts/generate-commit-message.js"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "dependencies": {
    "@apollo/client": "3.8.0",
    "@expo/metro-runtime": "^6.1.2",
    "@expo/vector-icons": "^15.0.3",
    "@react-native-async-storage/async-storage": "^2.2.0",
    "@react-native-community/netinfo": "^11.4.1",
    "@react-navigation/native": "^7.1.8",
    "@reduxjs/toolkit": "^2.9.2",
    "dotenv": "^17.2.3",
    "drizzle-orm": "^0.44.6",
    "expo": "~54.0.19",
    "expo-constants": "~18.0.10",
    "expo-dev-client": "~6.0.16",
    "expo-font": "~14.0.9",
    "expo-linking": "~8.0.8",
    "expo-localization": "^17.0.7",
    "expo-location": "~19.0.7",
    "expo-router": "~6.0.13",
    "expo-splash-screen": "~31.0.10",
    "expo-status-bar": "~3.0.8",
    "expo-system-ui": "^6.0.8",
    "expo-web-browser": "^15.0.8",
    "graphql": "^16.11.0",
    "graphql-workers-subscriptions": "^0.1.6",
    "graphql-yoga": "^5.16.0",
    "i18next": "^25.6.0",
    "react": "19.1.0",
    "react-i18next": "^16.1.5",
    "react-native": "0.81.5",
    "react-native-safe-area-context": "~5.6.1",
    "react-native-screens": "~4.16.0",
    "react-native-web": "~0.21.2",
    "react-native-webview": "^13.16.0",
    "react-redux": "^9.2.0",
    "redux-persist": "^6.0.0"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251011.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@eslint/js": "^9.38.0",
    "@graphql-codegen/cli": "^6.0.1",
    "@graphql-codegen/typescript": "^5.0.2",
    "@graphql-codegen/typescript-graphql-files-modules": "^3.0.1",
    "@graphql-codegen/typescript-operations": "^5.0.2",
    "@graphql-codegen/typescript-react-apollo": "^4.3.3",
    "@types/react": "~19.1.10",
    "@types/react-dom": "^19.2.2",
    "@typescript-eslint/eslint-plugin": "^8.46.2",
    "@typescript-eslint/parser": "^8.46.2",
    "concurrently": "^8.2.2",
    "drizzle-kit": "^0.31.5",
    "eslint": "^9.38.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-prettier": "^5.5.4",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.0",
    "eslint-plugin-react-native": "^5.0.0",
    "prettier": "^3.6.2",
    "react-test-renderer": "19.2.0",
    "typescript": "~5.9.3",
    "wrangler": "^4.43.0"
  },
  "packageManager": "yarn@1.22.22"
}
