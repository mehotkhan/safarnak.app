{
  "name": "safarnak-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "worker",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"yarn workspace safarnak-worker dev\" \"yarn workspace safarnak start\"",
    "build": "yarn workspace safarnak-worker build && yarn workspace safarnak build",
    "worker:dev": "yarn workspace safarnak-worker dev",
    "worker:deploy": "yarn workspace safarnak-worker deploy",
    "client:start": "yarn workspace safarnak start",
    "client:android": "yarn workspace safarnak android",
    "client:ios": "yarn workspace safarnak ios",
    "client:web": "yarn workspace safarnak web",
    "db:generate": "yarn workspace safarnak-worker db:generate",
    "db:migrate": "yarn workspace safarnak-worker db:migrate",
    "db:migrate:prod": "yarn workspace safarnak-worker db:migrate:prod",
    "db:studio": "yarn workspace safarnak-worker db:studio",
    "db:manager": "yarn workspace safarnak-worker db:manager",
    "clean": "rm -rf worker/.wrangler client/db.db* node_modules/.cache && echo 'Cleared databases and cache'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "yarn@1.22.22"
}
