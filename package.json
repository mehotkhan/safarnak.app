{
  "name": "safarnak-app",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "worker",
    "client"
  ],
  "scripts": {
    "dev": "concurrently \"yarn worker:dev\" \"yarn client:start\"",
    "worker:dev": "yarn workspace safarnak-worker dev",
    "worker:deploy": "yarn workspace safarnak-worker deploy",
    "client:start": "yarn workspace safarnak start",
    "client:android": "yarn workspace safarnak android",
    "client:ios": "yarn workspace safarnak ios",
    "client:web": "yarn workspace safarnak web",
    "build:debug": "yarn workspace safarnak build:debug",
    "build:release": "yarn workspace safarnak build:release",
    "build:debug:ios": "yarn workspace safarnak build:debug:ios",
    "build:release:ios": "yarn workspace safarnak build:release:ios",
    "db:generate": "yarn workspace safarnak-worker db:generate",
    "db:migrate": "yarn workspace safarnak-worker db:migrate",
    "db:studio": "yarn workspace safarnak-worker db:studio",
    "clean": "rm -rf worker/.wrangler client/db.db* node_modules/.cache client/android/.gradle client/android/build client/android/app/build client/.expo && echo 'Cleared databases, cache, and build artifacts'",
    "clean:all": "yarn clean && rm -rf ~/.gradle/caches ~/.android/build-cache && echo 'Cleared all caches including global Gradle cache'"
  },
  "devDependencies": {
    "concurrently": "^8.2.2"
  },
  "packageManager": "yarn@1.22.22"
}
