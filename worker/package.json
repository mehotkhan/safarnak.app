{
	"name": "safarnak-worker",
	"version": "0.0.0",
	"private": true,
	"scripts": {
		"deploy": "wrangler deploy",
		"dev": "wrangler dev --ip 0.0.0.0",
		"types": "wrangler types",
		"cf-typegen": "wrangler types",
		"db:generate": "drizzle-kit generate --config drizzle.config.ts",
		"db:migrate": "wrangler d1 migrations apply my-d1-db --local",
		"db:migrate:prod": "wrangler d1 migrations apply my-d1-db",
		"db:studio": "drizzle-kit studio --config drizzle.config.ts --port 4983",
		"db:push": "drizzle-kit push --config drizzle.config.ts",
		"db:drop": "drizzle-kit drop --config drizzle.config.ts",
		"db:check": "drizzle-kit check --config drizzle.config.ts",
		"db:up": "drizzle-kit up --config drizzle.config.ts",
		"db:manager": "node db-manager.js"
	},
	"devDependencies": {
		"@cloudflare/workers-types": "^4.20251011.0",
		"drizzle-kit": "^0.31.5",
		"typescript": "^5.9.3",
		"wrangler": "^4.43.0"
	},
	"dependencies": {
		"@graphql-tools/schema": "^10.0.25",
		"drizzle-orm": "^0.44.7",
		"graphql": "^16.11.0",
		"graphql-workers-subscriptions": "^0.1.6",
		"graphql-yoga": "^5.16.0"
	}
}