# Auto detect text files and perform LF normalization
* text=auto

# Source code
*.js text eol=lf
*.jsx text eol=lf
*.ts text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.md text eol=lf
*.sh text eol=lf

# Gradle
*.gradle text eol=lf
gradlew text eol=lf
gradle-wrapper.properties text eol=lf

# Android
*.xml text eol=lf
*.pro text eol=lf
*.properties text eol=lf

# iOS
*.pbxproj text eol=lf
*.plist text eol=lf
*.storyboard text eol=lf
*.xcscheme text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.webp binary
*.ico binary
*.ttf binary
*.otf binary
*.woff binary
*.woff2 binary
*.eot binary
*.jar binary
*.apk binary
*.aab binary
